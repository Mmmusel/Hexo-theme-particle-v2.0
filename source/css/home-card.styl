#home-card
    position relative
    width 300px
    top 100px

    .card-style
        border-radius 10px
        text-align center
        // box-shadow 0px 0px 15px rgba(0, 0, 0, 0.039)
        border none

        .avatar
            text-align center
            margin auto
            width 106px
            height 106px
            border-radius 50%
            border side-card-avatar 3px solid

            img
                border-radius 50%
                width 100px
                height 100px

        .name
            margin 10px auto
            color text-font
            text-transform capitalize
            font-size 26px

        .descriptions
            margin 20px auto
            width 85%
            font-size 16px

        .icon-links
            width 85%
            margin 10px auto
            padding 8px 15px
            border-top #cdcdcd solid 1px
            border-bottom #cdcdcd solid 1px

            a
                color label-font
                font-size 18px
                padding 3px 5px
                border-radius 5px

                &:hover
                    color white
                    background side-card-button

            .icon-link
                margin 5px

        .friend-links
            margin 30px auto

            .friend-link
                margin 5px auto
                text-align center

                a
                    display inline-block
                    width 140px
                    line-height 3
                    background linear-gradient(120deg, #96ceff 0, #ff9edb 100%)
                    color white
                    font-size 16px
                    border-radius 15px

                    &:hover
                        background side-card-button
                        color label-font